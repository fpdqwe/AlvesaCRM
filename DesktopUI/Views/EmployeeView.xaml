<UserControl x:Class="DesktopUI.Views.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm ="clr-namespace:DesktopUI.ViewModels"
             xmlns:toolsVM="clr-namespace:DesktopUI.ViewModels.Employee"
             xmlns:tools="clr-namespace:DesktopUI.Views.CustomControls.Employee"
             xmlns:local="clr-namespace:DesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1600">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type toolsVM:AdditionVM}">
            <tools:Addition/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type tools}"
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <vm:EmployeeVM/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource SCB-Main}"/>

        <ContentControl Content="{Binding NavigationVM}"
                        Grid.Row="1"/>
    </Grid>
</UserControl>
