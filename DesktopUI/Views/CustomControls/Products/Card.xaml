                        <TextBlock Text="Размеры"
                                   Style="{StaticResource ArticleText}"
                                   Grid.Row="0"/>
                        <Button Style="{StaticResource IsolatedBtn}"
                                Command="{Binding UpdateSizesCommand}"
                                Content="Сохранить"
                                Width="200"
                                HorizontalAlignment="Right"
                                Margin="0 5 10 5"/>

