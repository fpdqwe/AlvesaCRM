                    -->
                </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Name="TpoEdit"
                     Width="280"
                     Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/TPOIcon.png" 
                               Margin="2"/>
                        <TextBlock Style="{StaticResource ArticleText}"
                                   FontSize="15"
                                   Text="Редактирование ТПО" 
                                   Margin="5 0"/>
                    </StackPanel>
                </TabItem.Header>

                <DataGrid ItemsSource="{Binding TechSpecs}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Color" Binding="{Binding Colors}"/>
                    </DataGrid.Columns>

                </DataGrid>
            </TabItem>
            <TabItem Name="Balance"
                     Width="200"
                     Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ArticleText}"
                                   FontSize="15"
                                   Text="Баланс" 
                                   Margin="5 0"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="OOEdit"
                     Width="200"
                     Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/PlusIcon.png" 
                               Margin="2"/>
                        <TextBlock Style="{StaticResource ArticleText}"
                                   FontSize="15"
                                   Text="Внесение ОО" 
                                   Margin="5 0"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="Svodka"
                     Width="200"
                     Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/SvodkaIcon.png" 
                               Margin="2"/>
                        <TextBlock Style="{StaticResource ArticleText}"
                                   FontSize="15"
                                   Text="Сводка" 
                                   Margin="5 0"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="Managment"
                     Width="200"
                     Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Gear.png" 
                               Margin="2"/>
                        <TextBlock Style="{StaticResource ArticleText}"
                                   FontSize="15"
                                   Text="Управление" 
                                   Margin="5 0">
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
