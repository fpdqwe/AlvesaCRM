<UserControl x:Class="DesktopUI.Views.CustomControls.Employee.Addition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:DesktopUI.ViewModels.Employee"
             xmlns:local="clr-namespace:DesktopUI.Views.CustomControls.Employee"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AdditionVM/>
    </UserControl.DataContext>
    
    <Grid>
        <Popup IsOpen="False"
               Placement="Center">
            <Border Style="{StaticResource EmptyBorder}">
                <TextBlock Style="{StaticResource ArticleText}"
                           Text="Transaction completed successfuly"
                           Margin="20"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
